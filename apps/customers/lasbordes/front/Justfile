set shell := ["zsh", "-c"]

dev:
    pnpm run dev

build:
    pnpm run build

clean:
    rm -rf .next

lint:
    pnpm run lint || pnpm exec bunx ultracite fix

format:
    pnpm exec biome format --write || true

types:
    pnpm run typecheck || pnpm exec tsc --noEmit

help:
    echo "Commandes disponibles :"
    just --list

commit:
    just -f "{{justfile_directory()}}/../../../Justfile" commit

versions:
    just -f "{{justfile_directory()}}/../../../Justfile" versions
    echo "(lasbordes/front) next: $(pnpm exec next --version 2>/dev/null || true)"

install:
    just -f "{{justfile_directory()}}/../../../Justfile" install
    pnpm install
