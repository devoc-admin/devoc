{ declare -F source_up >/dev/null 2>&1; } || source "$DIRENV_LIBDIR/stdlib.sh"
source_up

dotenv_if_exists .env
dotenv_if_exists .env.local

# Vérifications d'outils (non bloquantes)
if ! has node; then
    log_error "Manquant (apps/customers/lasbordes/front): node";
    exit 1
fi
if ! has pnpm; then
    log_error "Manquant (apps/customers/lasbordes/front): pnpm";
    exit 1
fi

layout node

pnpm install >/dev/null 2>&1 || true

log_status "lasbordes/front env prêt."
watch_file .env .env.local package.json
