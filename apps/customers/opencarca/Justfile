set shell := ["zsh", "-c"]

# Local commands for apps/customers/opencarca
dev:
    pnpm run dev

build:
    pnpm run build

clean:
    rm -rf .next

lint:
    pnpm run lint

format:
    pnpm run format || pnpm exec biome format --write

types:
    pnpm run check-types || pnpm exec tsc --noEmit

help:
    echo "Commandes disponibles :"
    just --list

# Versions: delegate parent + local info
versions:
    just -f "{{justfile_directory()}}/../../../Justfile" versions
    echo "(apps/customers/opencarca) next: $(pnpm exec next --version 2>/dev/null || true)"

# Install: delegate parent + local install
install:
    just -f "{{justfile_directory()}}/../../../Justfile" install
    pnpm install
