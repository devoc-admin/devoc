set shell := ["zsh", "-c"]

dev:
    bun run dev

build:
    echo "(apps/email) Pas de build dédié; utilisez dev pour prévisualiser."

clean:
    rm -rf node_modules

lint:
    echo "(apps/email) lint non défini"

format:
    bun x biome format --write || true

types:
    echo "(apps/email) typecheck non défini"

help:
    echo "Commandes disponibles :"
    just --list

versions:
    just -f "{{justfile_directory()}}/../../Justfile" versions
    echo "(apps/email) react-email: dev server via bun scripts"

install:
    just -f "{{justfile_directory()}}/../../Justfile" install
    bun install
