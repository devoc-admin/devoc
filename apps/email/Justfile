set shell := ["zsh", "-c"]

dev:
    pnpm run dev || npm run dev || yarn dev

build:
    echo "(apps/email) Pas de build dédié; utilisez dev pour prévisualiser."

clean:
    rm -rf node_modules

lint:
    echo "(apps/email) lint non défini"

format:
    pnpm exec biome format --write || true

types:
    echo "(apps/email) typecheck non défini"

help:
    echo "Commandes disponibles :"
    just --list

commit:
    just -f "{{justfile_directory()}}/../../Justfile" commit

versions:
    just -f "{{justfile_directory()}}/../../Justfile" versions
    echo "(apps/email) react-email: dev server via npm scripts"

install:
    just -f "{{justfile_directory()}}/../../Justfile" install
    pnpm install || npm install || yarn
