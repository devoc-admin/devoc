{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        ".react-email/.next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "RESEND_API_KEY",
        "CONTACT_EMAIL",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "POSTGRES_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "EDGE_CONFIG",
        "POSTGRES_PRISMA_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_URL_NON_POOLING",
        "PGHOST",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "PGPASSWORD",
        "PGDATABASE",
        "PGHOST_UNPOOLED",
        "PGUSER",
        "POSTGRES_URL_NO_SSL",
        "POSTGRES_HOST",
        "NEON_PROJECT_ID"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "RESEND_API_KEY", "CONTACT_EMAIL"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "RESEND_API_KEY", "CONTACT_EMAIL"]
    }
  }
}
