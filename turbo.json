{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        ".react-email/.next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "RESEND_API_KEY",
        "CONTACT_EMAIL",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "POSTGRES_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "RESEND_API_KEY", "CONTACT_EMAIL"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV", "RESEND_API_KEY", "CONTACT_EMAIL"]
    }
  }
}
